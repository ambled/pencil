<%= header(graph_uplink) %>
<% hosts = @dash.get_valid_hosts(@zoom, @cluster)[0].sort %>

<%= cluster_switcher(@dash.clusters) %>
<%= graph_switcher %>
<%= shortcuts(hosts.collect { |h| "<a href=\"##{h}\">#{h}</a>" }.join(" ")) %>

<div class="graph_container" style="width:<%= @zoom.width(merge_opts) %>;">
  <h3><%= @zoom.name %> / <%= @cluster %> :: summary
  </h3>
  <div class="graph">
  <% url, desc = @dash.render_cluster_graph(@zoom, @cluster, :dynamic_url_opts => merge_opts) %>
  <%= img(url, desc) %>
  </div>
</div>

<% hosts.each do |host| %>
<div class="graph_container" style="width:<%= @zoom.width(merge_opts) %>;">
  <a name="<%= host %>"></a>
  <% url, desc, zoom_url = cluster_zoom_graph(@zoom, @cluster, host, "#{@zoom.name} / #{@cluster} / #{host}") %>
  <h3><%= @zoom.name %> / <%= @cluster %> / <%= host %>
    <span class="tools">(<a href="<%= zoom_url %>">host</a>)</span>
  </h3>
  <div class="graph">
    <%= img(url, desc, zoom_url) %>
  </div>
</div>
<% end %>
