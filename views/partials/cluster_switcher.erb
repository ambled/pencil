<table cellspacing="8">
  <tr>
    <td>clusters:</td>
    <% settings.config.clusters.sort.each do |c| %>
    <td>
    <%=
       sub = append_query_string(request.path.sub(@cluster, c))
       @cluster == c ? "#{c}" : "<a href=\"#{sub}\">#{c}</a>"
       %>
    </td>
    <% end %>
    <td></td>
    <td>
      <%= 
         if @cluster == "global"
            "(global)"
         else
            "<a href=\"#{append_query_string(request.path.sub(@cluster, 'global'))}\">(global)</a>"
         end
         %>
    </td>
  </tr>
</table>
