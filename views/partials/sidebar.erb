<div class="span2">
  <div class="well sidebar-nav">
    <ul class="nav nav-list">
      <li class="nav-header">Global Views</li>
      <li<%= ' class="active"' if @cluster.name == 'global' %>><a href="/dash/global">overview</a></li>
      <% if @multi %>
      <li class="nav-header">Cluster Views</li>
      <% @clusters.map(&:name).each do |c| %>
      <li<%= ' class="active"' if @cluster.name == c %>><a href="/dash/<%= c %>"><%= c %></a></li><% end %>
      <% end %>
      <li class="nav-header">Dashboards (<%= @cluster || 'global' %>)</li>
      <% Dashboard.groups.each do |group| %>
      <li><a href="/group/<%= group %>"><span class="label"><%= group %></span></a></li><% Dashboard.group_entries(group).each do |d| %>
      <li<%= ' class="active"' if @dash && @dash == d %>><a href="/dash/<%= @cluster %>/<%= d.name %>"><%= d.title %></a></li><% end %><% end %>
      <li class="divider"></li>
      <li class="nav-header">Host Selector</li>
      <div class="controls">
        <input type="text" <%= " placeholder=\"#{@host.name}\"" if @host %> class="span6" style="margin: 0 auto;" data-provide="typeahead" data-items="8" data-source='<%= @hosts.map(&:first).inspect %>'>
      </div>
      <li class="divider"></li>
      <li class="nav-header">Timespec</li>
      <div class="tabbable"> <!-- Only required for left/right tabs -->
        <ul class="nav nav-tabs">
          <li<%= ' class="active"' if @view != :calendar %>><a href="#tab1" data-toggle="tab">Live</a></li>
          <li<%= ' class="active"' if @view == :calendar %>><a href="#tab2" data-toggle="tab">Window</a></li>
        </ul>
        <div class="tab-content">
          <div class="tab-pane<%= ' active' if @view != :calendar %>" id="tab1">
            <ul class="nav nav-pills nav-stacked"><% settings.config[:views].each do |a| %>
              <li<%= ' default="true"' if a.is_default %>><a offset="<%= a.offset %>" label="<%= a.label %>" value="<%= a.from %>" onclick="liveSubmit(this);"><%= a.label||'' %></a></li><% end %>
            </ul>
          </div>
          <div class="tab-pane" id="tab2">
            <form class="navbar-form pull-left">
                <span class="label">from</span>
                <div class="input-append date" id="dp1" data-date-format="dd-mm-yyyy">
				  <input class="span6" size="16" type="text" value="">
				  <span class="add-on"><i class="icon-calendar"></i></span>
			    </div>
                <div class="input-append bootstrap-timepicker-component" id="tp1">
                  <input type="text" class="timepicker-default input-small" value="">
                  <span class="add-on">
                    <i class="icon-time"></i>
                  </span>
                </div>
                <span class="label">to</span>
                <div class="input-append date" id="dp2" data-date="" data-date-format="dd-mm-yyyy">
				  <input class="span6" size="16" type="text" value="">
				  <span class="add-on"><i class="icon-calendar"></i></span>
			    </div>
                <div class="input-append bootstrap-timepicker-component" id="tp2">
                  <input type="text" class="timepicker-default input-small" value="">
                  <span class="add-on">
                    <i class="icon-time"></i>
                  </span>
                </div>
            </form>
            <button onclick="calendarSubmit(self)" class="btn">Submit</button>
          </div>
        </div>
      </div>
    </ul>
  </div><!--/.well -->
</div><!--/span-->
